---
interface IProps {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>

    <meta charset="UTF-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta name="author" content="Growigh" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
    />
    <meta name="robots" content="index, follow" />

    <!-- Open Graph (OG) Meta Tags -->
    <meta name="og:title" content="Growigh" />
    <meta name="og:type" content="website" />
    <meta name="og:image" content="" />
    <meta name="og:url" content="https://www.growigh.com/" />
    <meta name="og:description" content="" />
    <meta name="og:site_name" content="Growigh" />

    <!-- Twitter Card Meta Tag -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@wearegrowigh" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Sitemap Link -->
    <link rel="sitemap" href="/sitemap.xml" />

    <!-- Apple Meta Tags -->
    <link rel="apple-touch-icon" sizes="180x180" href="touch-icon-iphone.png" />
    <meta name="apple-mobile-web-app-title" content="Growigh" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />

    <link rel="canonical" href="https://www.growigh.com/" />
  </head>
  <body>
    <slot />
  </body>
</html>
